# Dynamically generated by Chef on <%= node["fqdn"] %>
# Any modifications will be overwritten by Chef.

ticker_interval = <%= node['belly']['procd']['ticker_interval'] %> # Time (seconds) to poll resources and collect metrics

<% if node['belly']['procd']['http']['enabled'] %>
[output.http]
bind_address = "<%= node['belly']['procd']['http']['bind_address'] %>:<%= node['belly']['procd']['http']['bind_port'] %>"
<% end %>

<% if node['belly']['procd']['heka']['enabled'] %>
[output.heka]
server = "<%= node['belly']['procd']['heka']['server'] %>:<%= node['belly']['procd']['heka']['port'] %>"
encoder = "<%= node['belly']['procd']['heka']['encoder'] %>"
sender = "<%= node['belly']['procd']['heka']['sender'] %>"
payload = "<%= node['belly']['procd']['heka']['payload'] %>"
<% end %>
